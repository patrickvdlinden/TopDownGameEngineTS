    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "TypeScript",
            "type": "shell",
            "command": "./node_modules/.bin/tsc.cmd",
            "args": [
                "-p",
                "src/tsconfig.json"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "taskName": "TypeScript_SpritesheetBuilder",
            "type": "shell",
            "command": "./node_modules/.bin/tsc.cmd",
            "args": [
                "-p",
                "SpritesheetBuilder/src/tsconfig.json"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "type": "typescript",
            "tsconfig": "SpritesheetBuilder\\src\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}